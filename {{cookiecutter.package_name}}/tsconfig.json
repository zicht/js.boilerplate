{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "removeComments": true,
        "sourceMap": true,
        "target": "es6",
        "lib": [
            "dom",
            "es7"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "doc",
        "node_modules",
        "test"
    ]
}